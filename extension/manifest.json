{
    "manifest_version": 3,
    "name": "OLED Customizer - Sync",
    "version": "1.0",
    "description": "Sends accurate media timeline data to OLED Customizer.",
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://127.0.0.1/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    }
}